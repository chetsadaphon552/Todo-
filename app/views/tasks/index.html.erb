<div class="container">
  <h1 class="title">รายการงาน</h1>

  <div class="form-container">
    <%= form_with(model: @task, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title, "งานใหม่", class: "label" %>
        <%= form.text_field :title, class: "input-text", placeholder: "เพิ่มงานใหม่" %>
      </div>
      <div class="form-group">
        <%= form.submit "สร้างงาน", class: "btn" %>
      </div>
    <% end %>
  </div>

  <h2 class="subtitle">งานที่ยังไม่เสร็จ</h2>
  <ul class="task-list">
    <% @tasks.each do |task| %>
      <li class="task-item">
        <span><%= task.title %></span>
        <%= link_to "ทำเครื่องหมายว่างานเสร็จ", complete_task_path(task), method: :patch, class: "complete-link" %>
      </li>
    <% end %>
  </ul>
</div>
